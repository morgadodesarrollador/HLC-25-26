FROM ubuntu
ARG USUARIO
RUN apt update && apt install -yq --no-install-recommends \
     nano \
     git curl  wget \
     iputils-ping net-tools \ 
     sudo

# copiar los script's del entrypoint (sc ppal ---> otrs sc' personalizadas)
RUN mkdir -p /root/admin/base
WORKDIR /root/admin/base
COPY ./dockerfiles/base/admin/start.sh .
RUN chmod +x ./start.sh


# el primer comando que use el contenedor para mantenerse vivo
#CMD ["tail", "-f", "/dev/null"]

ENTRYPOINT [ "./start.sh" ]